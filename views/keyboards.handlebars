<div id="information">
    {{#each keyboards as |keyboard|}}
    <div class="card">
        <img src="{{keyboard.photo}}" alt="">
        <div class="info">
            <h2>{{keyboard.product_name}}</h2>
            <p id="description">{{keyboard.description}}</p>
            <div class="bullet-points">
                <p>Rating: {{keyboard.rating}}</p>
                <p>{{keyboard.detail_1}}</p>
                <p>{{keyboard.detail_2}}</p>
                <p>Price:<span id="dollar-sign"> $</span>{{keyboard.price}}</p>
                <form action="/create-checkout-session/{{this.id}}" method="POST">
                    <button type="submit" id="checkout-button" class="shop-btn">Checkout</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}