<div class="community-container">
    <div class="message-card">
        <span class="message-card-title">Message !</span>
        <p id="message-card-content">Create an account to interact with the community.
        </p>
        <p id="login-message">Welcome back developer.</p>
        <div id="message-card-form">
            <button class="sign-up" id="create-account-btn"> Create Account</button>
            <span id="or"> -- or --</span>
            <button class="sign-up" id="login-btn"> Login</button>
        </div>
        <div id="account-card-form">
            <form action="/community" method="post">
                <label for="username"></label>
                <input placeholder="Name" type="text" name="username" required>
                <label for="email"></label>
                <input placeholder="Your Email" type="email" name="email" required>
                <label for="password"></label>
                <input placeholder="Password" type="password" name="password" required>
                <button id="submit-btn">Submit</button>
            </form>
            <button id="back-btn">← Back</button>
        </div>
        <div id="login-card-form">
            <form action="/community" method="post">
                <label for="email"></label>
                <input placeholder="Your Email" type="email" name="email" required>
                <label for="password"></label>
                <input placeholder="Password" type="password" name="password" required>
                <button id="submit-btn2">Submit</button>
            </form>
            <button id="back-btn2">← Back</button>
        </div>
    </div>
</div>