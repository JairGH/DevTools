<div id="information">
    {{#each mouse as |mouse| }}
    <div class="card">
        <img src="{{mouse.photo}}" alt="">
        <div class="info">
            <h2>{{mouse.product_name}}</h2>
            <p id="description">{{mouse.description}}</p>
            <div class="bullet-points">
                <p>Rating: {{mouse.rating}}</p>
                <p>{{mouse.detail_1}}</p>
                <p>{{mouse.detail_2}}</p>
                <p>Price:<span> $</span>{{mouse.price}}</p>
                <a href="/shop/{{this.id}}">
                    <button id="shop-btn" type="button">Shop</button>
                </a>
            </div>
        </div>
    </div>
    {{/each}}
</div>