<div id="information">
    {{#each headphones as |headphone| }}
    <div class="card">
        <img src="{{headphone.photo}}" alt="">
        <div class="info">
            <h2 class="name">{{headphone.product_name}}</h2>
            <p id="description">{{headphone.description}}</p>
            <div class="bullet-points">
                <p>Rating: {{headphone.rating}}</p>
                <p>{{headphone.detail_1}}</p>
                <p>{{headphone.detail_2}}</p>
                <p>Price:<span id="dollar-sign"> $</span>{{headphone.price}}</p>
                <form action="/create-checkout-session/{{this.id}}" method="POST" id="checkout-btn">
                    <button type="submit" id="checkout-button" class="shop-btn">Checkout</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>